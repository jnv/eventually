<h1>Listing events</h1>

<table>
  <thead>
    <tr>
      <th>Series</th>
      <th>Name</th>
      <th>Speaker</th>
      <th>Date</th>
      <th>Start</th>
      <th>Length</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @events.each do |event| %>
    <tr>
      <td><%= event.series %></td>
      <td><%= event.name %></td>
      <td><%= event.speaker %></td>
      <td><%= event.date %></td>
      <td><%= event.start.to_s(:time) %></td>
      <td><%= event.length %></td>
      <td><%= link_to 'Show', event %></td>
      <td><%= link_to 'Edit', edit_event_path(event) %></td>
      <td><%= link_to 'Destroy', event, method: :delete, data: { confirm: 'Are you sure?' } %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<br />

